// script.js 

// --- 1. Modales ---
document.getElementById("open-modal").addEventListener("click", function () {
    document.getElementById("modal").style.display = "flex";
});

document.getElementById("close-modal").addEventListener("click", function () {
    document.getElementById("modal").style.display = "none";
});

window.addEventListener("click", function (event) {
    const modal = document.getElementById("modal");
    if (event.target === modal) {
        modal.style.display = "none";
    }
});

// --- 2. Eventos Interactivos ---
const navItems = document.querySelectorAll("header nav ul li a");

navItems.forEach((item) => {
    item.addEventListener("mouseenter", () => {
        item.style.color = "red";
    });
    item.addEventListener("mouseleave", () => {
        item.style.color = "black";
    });
});

// --- 3. Conexión a API ---
const weatherInfo = document.getElementById("weather-info");
const API_KEY = "tu_api_key_aqui"; // Inserta tu API key de OpenWeather
const city = "Bogotá"; // Cambia a tu ciudad

async function fetchWeather() {
    try {
        const response = await fetch(
            `https://api.openweathermap.org/data/2.5/weather?q=${city}&appid=${API_KEY}&units=metric&lang=es`
        );
        const data = await response.json();
        weatherInfo.textContent = `El clima en ${data.name}: ${data.main.temp}°C, ${data.weather[0].description}`;
    } catch (error) {
        weatherInfo.textContent = "No se pudo cargar el clima.";
        console.error("Error al obtener el clima:", error);
    }
}

fetchWeather();


